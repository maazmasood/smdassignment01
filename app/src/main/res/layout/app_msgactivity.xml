<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fafafa"
        android:padding="10dp"
        android:weightSum="2"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/backshape" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/profileicon"
                android:contentDescription="IS Icon"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="internshala"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"

            >

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/videocallcamera"
                android:background="@android:color/transparent"
                />

            <ImageButton
               android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/infoicon"
                android:background="@android:color/transparent"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textAlignment="center"
            android:text="4: 49 PM"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Hello"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#A44C4C"
            android:textColor="@android:color/white"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/msgbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        android:background="#F0F0F0"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/nav_left"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/camerashape"
            android:scaleType="centerInside" />

        <EditText
            android:id="@+id/searchbarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Enter Message"
            android:background="@android:color/white"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/bottomright1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/micicon"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/bottomright2"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/galleryicon"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/bottomright3"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/stickericon"
                android:scaleType="centerInside" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>